  <script>
    // CONFIG
    const PHONE = "50432265089"; // <- tu WhatsApp (sin +)
    const DEFAULT_MSG = "Hola CAmuebla, quiero una cotizaci√≥n. ";

    // Helpers
    const waLink = (text) => `https://wa.me/${PHONE}?text=${encodeURIComponent(text)}`;

    // Nav mobile
    const hamb = document.getElementById("hamb");
    const menu = document.getElementById("menu");
    hamb?.addEventListener("click", () => {
      const isOpen = menu.style.display === "flex";
      menu.style.display = isOpen ? "none" : "flex";
      menu.style.flexDirection = "column";
      menu.style.gap = "6px";
      menu.style.padding = "12px";
      menu.style.border = "1px solid rgba(255,255,255,.08)";
      menu.style.borderRadius = "16px";
      menu.style.background = "rgba(11,15,20,.95)";
      menu.style.position = "absolute";
      menu.style.right = "18px";
      menu.style.top = "64px";
      menu.style.width = "220px";
    });

    // WhatsApp buttons
    document.getElementById("btn-wa").href = waLink(DEFAULT_MSG);
    document.getElementById("btn-wa-2").href = waLink(DEFAULT_MSG);
    document.getElementById("wa-float").href = waLink(DEFAULT_MSG);

    // Catalog filter
    const chips = document.querySelectorAll(".chip");
    const items = document.querySelectorAll(".item");
    chips.forEach(chip => {
      chip.addEventListener("click", () => {
        chips.forEach(c => c.classList.remove("active"));
        chip.classList.add("active");
        const f = chip.dataset.filter;
        items.forEach(it => {
          const cat = it.dataset.cat;
          it.style.display = (f === "all" || f === cat) ? "block" : "none";
        });
      });
    });

    // Quick WA per item
    document.querySelectorAll("[data-wa]").forEach(btn => {
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        const product = btn.getAttribute("data-wa");
        window.open(waLink(`${DEFAULT_MSG}Me interesa: ${product}. ¬øMe ayudas con precio y tiempo?`), "_blank");
      });
      btn.setAttribute("href", waLink(DEFAULT_MSG));
    });

    // Form -> WhatsApp
    document.getElementById("form").addEventListener("submit", (e) => {
      e.preventDefault();
      const data = new FormData(e.target);
      const msg =
`Hola CAmuebla, quiero una cotizaci√≥n:
Nombre: ${data.get("name")}
Tel: ${data.get("phone")}
Mueble: ${data.get("service")}
Detalles: ${data.get("message")}`;
      window.open(waLink(msg), "_blank");
      e.target.reset();
    });

    // Year
    document.getElementById("year").textContent = new Date().getFullYear();
  </script>
